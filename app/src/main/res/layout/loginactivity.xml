<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/usernameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Your Username" />

    <EditText
        android:id="@+id/passswordET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/usernameET"
        android:layout_alignRight="@+id/usernameET"
        android:layout_below="@+id/usernameET"
        android:layout_marginTop="49dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Enter your password"/>

    <Button
        android:id="@+id/loginBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passswordET"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="Login"
        android:onClick="onLoginClicked"/>

    <TextView
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/passswordET"
        android:layout_alignLeft="@+id/passswordET"
        android:layout_alignRight="@+id/passswordET"
        android:layout_alignStart="@+id/passswordET"
        android:layout_below="@+id/loginBTN"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:maxLines="1"
        android:clickable="true"
        android:focusable="true"
        android:text="not a member yet?, try signup!!"
        android:onClick="onSignUpTextClicked"/>
</RelativeLayout>
